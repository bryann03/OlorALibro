<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewPremios"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewPremio"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/casalibro" />

        <TextView
            android:id="@+id/textViewNombrePremio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/premio2"
            tools:text="10€ Descuento"
            android:textSize="30sp"
            android:padding="5dp"
            android:gravity="center_horizontal|center"
            android:textColor="@color/Letra_verde"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/textViewDescripcionPremio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Obtén un descuento inmediato de 10€ por la compra de cualquier libro en todas nuestras tiendas."
            android:textSize="15sp"
            android:textColor="@color/Letra_negro"
            android:padding="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/Letra_verde"
                android:text="@string/coste_premio"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewCostePremio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                tools:text="500"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:text="@string/puntos"/>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <Button
                android:id="@+id/buttonCanjear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:drawableStart="@drawable/canjear"
                android:background="@color/colorAccent"
                tools:text="CANJEAR"
                android:textColor="@color/Letra_negro"
                android:text="@string/Canjear"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>