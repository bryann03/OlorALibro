<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ActivityRegistrarse">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/titulos"
            android:textStyle="bold"
            android:text="@string/txtBoton_Registrarse"
            android:textColor="@color/Letra_verde"
            android:layout_marginTop="15dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/Letra_verde">

            <EditText
                android:id="@+id/editTextRegistroNombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="true"
                android:hint="Nombre"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/Letra_verde">

            <EditText
                android:id="@+id/editTextRegistroApellido"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="true"
                android:hint="Apellido"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/Letra_verde">

            <EditText
                android:id="@+id/editTextRegistroEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="true"
                android:hint="@string/email_hint"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/Letra_verde">

            <EditText
                android:id="@+id/editTextRegistroContraseña"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="true"
                android:hint="@string/contraseña_hint"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/Letra_verde">

            <EditText
                android:id="@+id/editTextRegistroRepiteContraseña"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="true"
                android:hint="Repite Contraseña"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/checkBoxTermes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            android:text="Acepto los términos y condiciones"
            android:textColor="@color/Letra_verde"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/checkBoxPublicitat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            android:text="Acepto recibir publicidad engañosa"
            android:textColor="@color/Letra_verde"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonRegistroRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margen_titulos"
            android:text="@string/txtBoton_Registrarse"
            android:textColor="@color/letra_blanco"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@drawable/side_nav_bar"/>

    </LinearLayout>

</ScrollView>


